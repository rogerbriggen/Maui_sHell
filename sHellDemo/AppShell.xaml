<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="sHellDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:sHellDemo"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Hello, World!"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent 
            Title="Events"
            Icon="dotnet_bot.png"
            Route="events"
            ContentTemplate="{DataTemplate local:EventsPage}" />
        <ShellContent 
            Title="Dummy1"
            Icon="dotnet_bot.png"
            Route="dummyPage1"
            ContentTemplate="{DataTemplate local:DummyPage}" />
        <ShellContent 
            Title="Dummy2"
            Icon="dotnet_bot.png"
            Route="dummyPage2"
            ContentTemplate="{DataTemplate local:DummyPage}" />
        <ShellContent 
            Title="Dummy3"
            Icon="dotnet_bot.png"
            Route="dummyPage3"
            ContentTemplate="{DataTemplate local:DummyPage}" />
    </TabBar>
</Shell>
